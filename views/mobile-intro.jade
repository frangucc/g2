doctype html
html(lang='en')
  head
    meta(charset='UTF-8')
    title Frame Player - A player based on images frames for mobile devices
    link(rel='shortcut icon', href='favicon.ico')
    link(rel='stylesheet', href='/css/frameplayer.css')
    style.
        body {background-color: #000;color:#fff;margin:0px;}
        body p {font-size:5em !important;margin-top:24%}
        canvas {

            top: 0px;
            left:-20%;
              width:140%;
            height:140%;
            background-color: none;
            position:absolute;
            z-index:9;background-color: #000;color:#fff;
          }
  body
    div
      a(href="/#/")
        img(src='./img/logo.png' style="position:absolute;z-index:99;top:45%;left:23%")
    #player1.frameplayer(data-vidsrc='videos/video.json' style="background-color: #000;color:#fff;")
    script(src='/js/frameplayer.js')
